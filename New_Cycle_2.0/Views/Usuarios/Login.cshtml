@model New_Cycle_2._0.Usuarios

@{
    ViewBag.Title = "Iniciar Sesión";
}

@using (Html.BeginForm("Login", "Usuarios", FormMethod.Post, new { @class = "login-form", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div style="width: 1440px; height: 1024px; position: relative; background: white">
        <div style="width: 1440px; height: 1028px; left: 0px; top: 0px; position: absolute; background: white"></div>
        <div style="width: 704px; height: 1020px; left: 0px; top: 8px; position: absolute; background: rgba(205.84, 245.44, 155.44, 0.71); border-radius: 100px"></div>
        <div style="width: 638px; height: 73px; left: 757px; top: 308px; position: absolute; background: rgba(233.75, 199.04, 75.97, 0.43); border-radius: 100px"></div>
        <div style="width: 252px; height: 68px; left: 918px; top: 765.50px; position: absolute; background: rgba(233.75, 199.04, 75.97, 0.43); border-radius: 100px"></div>
        <div style="width: 233px; height: 47px; left: 945px; top: 776px; position: absolute; color: black; font-size: 30px; font-family: Inter; font-style: italic; font-weight: 700; word-wrap: break-word">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Iniciar Sesión" class="btn btn-primary" />
                </div>
            </div>
        </div>
        <div style="left: 891px; top: 169px; position: absolute; color: #743817; font-size: 48px; font-family: Inter; font-style: italic; font-weight: 700; word-wrap: break-word">Inicio de sesión </div>
        <div style="width: 638px; height: 73px; left: 757px; top: 469px; position: absolute; background: rgba(233.75, 199.04, 75.97, 0.43); border-radius: 100px"></div>
        <div style="width: 85px; height: 50px; left: 860px; top: 269px; position: absolute; color: black; font-size: 30px; font-family: Inter; font-style: italic; font-weight: 700; word-wrap: break-word">
            <div class="form-group">
                @Html.LabelFor(model => model.Email, new { @class = "login-form" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Email, new { @class = "login-form" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div style="width: 329px; height: 50px; left: 857px; top: 433px; position: absolute; color: black; font-size: 30px; font-family: Inter; font-style: italic; font-weight: 700; word-wrap: break-word">
            <div class="form-group">
                @Html.LabelFor(model => model.Contraseña, htmlAttributes: new { @class = "login-form" })
                <div class="col-md-10 input-group">
                    @Html.EditorFor(model => model.Contraseña, new { htmlAttributes = new { @class = "login-form", @type = "password", @id = "Contraseña" } })
                    <div class="input-group-append">
                        <button type="button" id="togglePassword" class="btn btn-secondary">
                            <i id="toggleIcon" class="fa fa-eye"></i>
                        </button>
                    </div>
                    @Html.ValidationMessageFor(model => model.Contraseña, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <img style="width: 47px; height: 62px; left: 794px; top: 319px; position: absolute" src="https://via.placeholder.com/47x62" />
        <img style="width: 47px; height: 50px; left: 794px; top: 483px; position: absolute" src="https://via.placeholder.com/47x50" />
        <div style="width: 638px; height: 73px; left: 757px; top: 624px; position: absolute; background: rgba(233.75, 199.04, 75.97, 0.43); border-radius: 100px"></div>
        <div style="width: 329px; height: 50px; left: 860px; top: 584px; position: absolute; color: black; font-size: 30px; font-family: Inter; font-style: italic; font-weight: 700; word-wrap: break-word">
            <div class="form-group">
                @Html.LabelFor(model => model.Tipo_de_Usuario, htmlAttributes: new { @class = "login-form" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Tipo_de_Usuario, new { htmlAttributes = new { @class = "login-form" } })
                    @Html.ValidationMessageFor(model => model.Tipo_de_Usuario, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <img style="width: 47px; height: 50px; left: 794px; top: 635px; position: absolute" src="https://via.placeholder.com/47x50" />
        <div style="width: 508px; height: 481px; left: 87px; top: 258px; position: absolute; background: rgba(255, 255, 255, 0.37)"></div>
        <img style="width: 500px; height: 519px; left: 95px; top: 248px; position: absolute" src="https://via.placeholder.com/500x519" />
        <div style="width: 524px; height: 534px; left: 87px; top: 248px; position: absolute; background: rgba(217, 217, 217, 0.18); border-radius: 9999px"></div>
        <div style="width: 543px; height: 119px; left: 112px; top: 814px; position: absolute; color: black; font-size: 32px; font-family: Inter; font-weight: 700; word-wrap: break-word">
            <div>
                @Html.ActionLink("¿No tienes cuenta?  Registrate", "Create", "Usuarios")
            </div>
        </div>
        <div style="width: 474px; height: 0px; left: 111.50px; top: 846.50px; position: absolute; border: 4px #743817 solid"></div>
        <img style="width: 322px; height: 179px; left: 27px; top: 36px; position: absolute" src="https://via.placeholder.com/322x179" />
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        <script>
            document.getElementById("togglePassword").addEventListener("click", function () {
                var passwordInput = document.getElementById("Contraseña");
                var passwordIcon = document.getElementById("toggleIcon");
                if (passwordInput.type === "password") {
                    passwordInput.type = "text";
                    passwordIcon.className = "fa fa-eye-slash";
                } else {
                    passwordInput.type = "password";
                    passwordIcon.className = "fa fa-eye";
                }
            });
        </script>
    }
}

