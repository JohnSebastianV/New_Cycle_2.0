@model New_Cycle_2._0.Ruta

@{
    ViewBag.Title = "Create";
}

<!DOCTYPE html>
<html>
<head>
    <title>Crear Nueva Ruta</title>
    <style>
        body {
            background-color: #CEF59B;
            text-align: center;
        }

        .create-container {
            width: 500px;
            margin: 0 auto;
            padding: 20px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .create-form label, .create-form input, .create-form small {
            display: block;
            margin-bottom: 10px;
        }

        .create-form small {
            font-size: 14px;
        }

        .create-form button {
            background-color: #007BFF;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="create-container">
        <h2>Crear Nueva Ruta</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <label for="Ruta1">Ruta</label>
            @Html.EditorFor(model => model.Ruta1, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ruta1, "", new { @class = "text-danger" })
            <h2></h2>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-plus"></i> Crear</button>
                </div>
            </div>
        }
    </div>

    <div>
        @Html.ActionLink("Regresar", "Index")
    </div>
</body>
</html>

