@model IEnumerable<New_Cycle_2._0.Ruta>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <title>Index</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-KyZXEAg3QhqLMpG8r+Knujsl5+z0I5t9zjnv0Z+xBC+ZlA2jgIddE2mIi2JxI5O2nEJnqNiz5Z9g6GO6GUqO8g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            background-color: #CEF59B;
            text-align: center;
            font-family: Arial, sans-serif;
        }

        .index-container {
            width: 80%;
            margin: 20px auto;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        h2 {
            color: #743817;
        }

        p {
            margin-top: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #007BFF;
            color: #fff;
        }

        td {
            background-color: #f9f9f9;
        }

        .action-links {
            color: #fff;
            background-color: #dc3545;
            padding: 5px 10px;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
        }

            .action-links:hover {
                background-color: #c82333;
            }
    </style>
</head>
<body>
    
        <h2>Rutas</h2>

        <p>
            <a href="@Url.Action("Create")" class="btn btn-primary">Crear Nueva Ruta</a>
        </p>

        <table>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Ruta1)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ruta1)
                    </td>
                    <td>
                        <a href="@Url.Action("Delete", new { id = item.RutaID })" class="action-links">Eliminar</a>
                    </td>
                </tr>
            }
        </table>
    
</body>
</html>


