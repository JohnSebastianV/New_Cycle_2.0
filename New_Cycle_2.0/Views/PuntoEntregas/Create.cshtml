@model New_Cycle_2._0.PuntoEntrega

@{
    ViewBag.Title = "Create";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-KyZXEAg3QhqLMpG8r+Knujsl5+z0I5t9zjnv0Z+xBC+ZlA2jgIddE2mIi2JxI5O2nEJnqNiz5Z9g6GO6GUqO8g==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <title>Crear Punto de entregas</title>
    <style>
        body {
            background-color: #CEF59B;
            text-align: center;
        }

        .create-container {
            width: 500px;
            margin: 0 auto;
            padding: 20px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .create-form label, .create-form input, .create-form select, .create-form small {
            display: block;
            margin-bottom: 10px;
        }

        .create-form small {
            font-size: 14px;
        }

        .create-form button {
            background-color: #007BFF;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="create-container">
        <h2>Crear Punto De Entrega</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <label for="Nombre_del_punto">Nombre del Punto</label>
            @Html.EditorFor(model => model.Nombre_del_punto, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nombre_del_punto, "", new { @class = "text-danger" })

            <label for="Direccion">Dirección</label>
            @Html.EditorFor(model => model.Direccion, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })

            <label for="Tipo_de_residuos">Tipo de Residuos</label>
            @Html.EditorFor(model => model.Tipo_de_residuos, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Tipo_de_residuos, "", new { @class = "text-danger" })
            <h2></h2>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Guardar
                    </button>
                </div>
            </div>

        }
    </div>
</body>
</html>



