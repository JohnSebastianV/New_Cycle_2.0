@model New_Cycle_2._0.Producto_intercambiado

@{
    ViewBag.Title = "Delete";
}

<!DOCTYPE html>
<html>
<head>
    <title>Delete</title>
    <style>
        body {
            background-color: #FADBD8;
            font-family: 'Arial', sans-serif;
        }

        .delete-container {
            width: 50%;
            margin: 20px auto;
            padding: 20px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2, h3 {
            color: #B03A2E;
        }

        dl {
            display: flex;
            flex-wrap: wrap;
        }

        dt, dd {
            flex: 0 1 48%;
            padding: 10px;
        }

        .form-actions {
            margin-top: 20px;
            display: flex;
            justify-content: space-between;
        }

        .btn-delete {
            background-color: #B03A2E;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

            .btn-delete:hover {
                background-color: #943126;
            }

        .btn-back {
            text-decoration: none;
            color: #B03A2E;
            padding: 10px 20px;
            border-radius: 5px;
            border: 1px solid #B03A2E;
        }

            .btn-back:hover {
                background-color: #F1948A;
            }
    </style>
</head>
<body>
    <div class="delete-container">
        <h2>Eliminar</h2>
        <h3>Estas seguro de eliminar este producto?</h3>

        <div>
            <h4>Producto_intercambiado</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Nombre_del_producto_intercambiado)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nombre_del_producto_intercambiado)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions">
                    <input type="submit" value="Eliminar" class="btn btn-delete" />
                    @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-back" })
                </div>
            }
        </div>
    </div>
</body>
</html>

