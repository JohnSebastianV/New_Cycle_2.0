@model IEnumerable<New_Cycle_2._0.Compras>

@{
    ViewBag.Title = "Index";
}
<!DOCTYPE html>
<html>
<head>

    <style>
        body {
            background-color: #ACEBFF; /* Cambia el color de fondo según tus preferencias */
        }
    </style>
</head>
<body>
    <h2>Compra de productos</h2>

    <p>
        @Html.ActionLink("Realizar compra", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Metodos_de_pago.Metodo_de_pago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Productos.Producto)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Metodos_de_pago.Metodo_de_pago)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Productos.Producto)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.FacturaID }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.FacturaID }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.FacturaID })
                </td>
            </tr>
        }

    </table>
</body>
</html>